  <body>

    <main>

      <form action="/admin/editarServico/<%= service.id_servico %>?_method=PUT" enctype="multipart/form-data" method="post" >
        <label for="imagem">Imagem:</label>
        <input type="file" name="imagem" id="imagem" required value="<%= service.imagem %>">
        <label for="titulo">Título:</label>
        <input type="text" name="titulo" id="titulo" required value="<%= service.titulo %>">
        <label for="descricao">Descrição:</label>
        <input type="text" name="descricao" id="descricao" required value="<%= service.descricao %>">
        <label for="valor">Valor:</label>
        <input type="text" name="valor" id="valor" required value="<%= service.valor %>">
        <input type="submit" value="Editar serviço">
      </form>

    </main>

