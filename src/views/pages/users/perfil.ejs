                    <a href="/users/perfil/edit/<%= user.id %>">
                        <button class="botao" id="normalFlag">EDITAR PERFIL</button>
                    </a>

                    <form method="POST" action="/users/perfil/delete/<%=user.id%>?_method=DELETE">
                        <button class="botao" id="redFlag">EXCLUIR PERFIL</button>
                    </form>

                </div>

            </main>
        </body>

    <%- include('../../partials/footer') %>

</html>